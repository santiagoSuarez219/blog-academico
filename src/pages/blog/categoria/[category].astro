---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../../components/BaseHead.astro";
import Footer from "../../../components/Footer.astro";
import FormattedDate from "../../../components/FormattedDate.astro";
import Header from "../../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE, CATEGORIES } from "../../../consts";

export async function getStaticPaths() {
  return CATEGORIES.map((category) => ({
    params: { category: category.id },
    props: { category },
  }));
}

interface Props {
  category: {
    id: string;
    label: string;
  };
}

const { category } = Astro.props;
const allPosts = await getCollection("blog");
const posts = allPosts
  .filter((post) => post.data.category === category.id)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${category.label} - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      main {
        width: 960px;
      }
      .category-title {
        font-size: 2.8em;
        margin-bottom: 2.5em;
        margin-top: 0;
        color: rgb(var(--black));
        font-weight: 800;
        text-align: center;
        letter-spacing: -0.02em;
        background: linear-gradient(135deg, rgb(var(--accent)), #1a26cc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2.5rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1.25rem);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }
      ul li:hover {
        transform: translateY(-8px);
      }
      ul li * {
        text-decoration: none;
        transition: 0.3s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 2rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(var(--gray), 30%);
      }
      ul li:first-child .title {
        font-size: 2.2rem;
      }
      ul li img {
        margin-bottom: 1rem;
        border-radius: 14px;
        box-shadow: 0 6px 20px rgba(var(--gray), 20%);
        object-fit: cover;
        width: 100%;
        height: 200px;
      }
      ul li a {
        display: block;
        padding: 1.2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(var(--gray), 15%);
        transition: all 0.3s ease;
      }
      ul li a:hover {
        box-shadow: 0 8px 24px rgba(var(--gray), 25%);
        background: linear-gradient(
          135deg,
          rgba(35, 55, 255, 0.02) 0%,
          rgba(255, 255, 255, 1) 100%
        );
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1.3;
        font-size: 1.4em;
        font-weight: 700;
      }
      .date {
        margin: 0.8em 0 0 0;
        color: rgb(var(--gray));
        font-size: 0.9em;
        font-weight: 500;
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: 0 12px 30px rgba(var(--accent), 0.3);
      }
      .empty-state {
        text-align: center;
        padding: 3rem;
        color: rgb(var(--gray));
        font-size: 1.1em;
      }
      @media (max-width: 720px) {
        main {
          width: 100%;
        }
        .category-title {
          font-size: 1.8em;
          margin-bottom: 1.5em;
        }
        ul {
          gap: 1.5rem;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 1rem;
        }
        ul li:first-child .title {
          font-size: 1.7em;
        }
        .title {
          font-size: 1.2em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1 class="font-bold text-lg text-center pb-8">{category.label}</h1>
      <section>
        {
          posts.length > 0 ? (
            <ul>
              {posts.map((post) => (
                <li>
                  <a href={`/blog/${post.id}/`}>
                    {post.data.heroImage && (
                      <Image
                        width={720}
                        height={360}
                        src={post.data.heroImage}
                        alt=""
                      />
                    )}
                    <h4 class="title pt-2 font-bold">{post.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            <p class="empty-state">
              No hay posts en esta categor√≠a por el momento.
            </p>
          )
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
